	<h2>ОБО ВСЕМ<span class="top_header"> &mdash; Блог</span></h2>
	<section class="brown">
		<nav>
			<ul>
				<li><a href="<?php echo $this->url(array(), 'blog'); ?>">Блог</a></li>
                <li><a href="<?php echo $this->url(array(), 'questions'); ?>">Ответы на вопросы</a></li>
